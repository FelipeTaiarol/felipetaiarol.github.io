{
  "swagger": "2.0",
  "info": {
    "description": "\"Ruum by SAP' is project management as a service for all business processes in an enterprise â€“ we simplify & automate team coordination across all your processes. Our simple promise: Spend less time babysitting and more time with your customers. We provide a simple API to integrate with Ruum, go ahead and try it our yourself!\n",
    "version": "1.0.0",
    "title": "One Pager for 'Ruum by SAP' API integration",
    "termsOfService": "https://ruumapp.com/",
    "contact": {
      "email": "vidyashree.basavaraju@sap.com"
    }
  },
  "host": "api-staging.ruumapp.com",
  "basePath": "/v1",
  "externalDocs": {
    "description": "Find out more about rummapp",
    "url": "https://ruumapp.com/"
  },
  "tags": [
    {
      "name": "ruum",
      "description": "\"Please follow the steps below to create a simple ruum.\n\"1. Click on the Post to explore\"\n\"2. Click on Authorize and provide the key.\"\n\"2. Click on Try it out\"\n\"3. Click on Execute\"\n\"4. Created ruum will be avialable in https://open-staging.ruumapp.com.\"\n"
    }
  ],
  "schemes": [
    "https"
  ],
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "paths": {
    "/ruums": {
      "post": {
        "tags": [
          "ruum"
        ],
        "summary": "Create your first hello ruum",
        "description": "\"This will create a very simple ruum with minimum entities\"\n\"A ruum is created with one participant and one section\"\n\"Please have a look at the Example Value and Model used for creation\"\n",
        "operationId": "createRuum",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "ruum created via swagger to test the API",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ruum"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Not authenticated"
          },
          "403": {
            "description": "Access token does not have the required scope"
          },
          "405": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "ApiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "authentication"
    }
  },
  "definitions": {
    "ruum": {
      "type": "object",
      "description": "structure to create a ruum",
      "properties": {
        "name": {
          "type": "string",
          "description": "(Mandatory) Name of the ruum",
          "example": "Manage Truck Delay"
        },
        "participants": {
          "type": "array",
          "description": "(Mandatory) A list of valid participants collaboration in the ruum",
          "items": {
            "type": "string",
            "description": "(Mandatory) A valid email id",
            "example": "vidyashree.basavaraju@sap.com"
          }
        },
        "sections": {
          "type": "array",
          "description": "(Mandatory) A valid email id",
          "items": {
            "$ref": "#/definitions/sectionItem"
          }
        }
      }
    },
    "sectionItem": {
      "type": "object",
      "description": "(Mandatory) A Section in a ruum",
      "properties": {
        "title": {
          "type": "string",
          "description": "(Mandatory) Title for the section",
          "example": "Find out alternative supply chain"
        },
        "content": {
          "type": "array",
          "description": "(Mandatory) Section details",
          "items": {
            "$ref": "#/definitions/content"
          }
        }
      }
    },
    "content": {
      "type": "object",
      "description": "(Mandatory) Section Contents details",
      "properties": {
        "type": {
          "type": "string",
          "example": "paragraph"
        },
        "text": {
          "type": "string",
          "description": "(Mandatory) content value",
          "example": "The delivery #BV3445468 is stuck in the snow, we might have to find an alternative"
        }
      }
    }
  }
}